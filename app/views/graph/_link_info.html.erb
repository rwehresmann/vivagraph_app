<div class="modal" id="link-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Link information</h4>
      </div>
      <div class="modal-body">
        <p><%= "This is a connection between #{answer_1[:user][:name]} answer to exercise #{answer_1[:exercise][:name]} and #{answer_2[:user][:name]} answer to exercise #{answer_2[:exercise][:name]}." %></p>
      </div>
      <div class="modal-footer">
        <button id="link-delete" class="btn btn-primary" type="button">Delete link</button>
      </div>
    </div>
  </div>
</div>
